<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtGasol"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="129dp"
        android:text="@string/txtGasol"
        app:layout_constraintBottom_toTopOf="@+id/inEtanol"
        app:layout_constraintStart_toStartOf="@+id/inGasol"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inGasol"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="95dp"
        android:ems="10"
        android:hint="@string/hintValor"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/inEtanol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEtanol"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="143dp"
        android:layout_marginBottom="143dp"
        android:text="@string/txtEtanol"
        app:layout_constraintBottom_toTopOf="@+id/txtRes"
        app:layout_constraintStart_toStartOf="@+id/inEtanol"
        app:layout_constraintTop_toTopOf="@+id/txtGasol" />

    <EditText
        android:id="@+id/inEtanol"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="425dp"
        android:ems="10"
        android:hint="@string/hintValor"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inGasol" />

    <Button
        android:id="@+id/btnCalc"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        android:text="@string/calc"
        app:layout_constraintBottom_toTopOf="@+id/txtRes"
        app:layout_constraintEnd_toEndOf="@+id/inEtanol"
        app:layout_constraintStart_toStartOf="@+id/inEtanol"
        app:layout_constraintTop_toBottomOf="@+id/inEtanol" />

    <TextView
        android:id="@+id/txtRes"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="297dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnCalc"
        app:layout_constraintTop_toBottomOf="@+id/btnCalc" />

</androidx.constraintlayout.widget.ConstraintLayout>